        .row
          .col-sm-4
            .input-group
              input.form-control(type='text', placeholder='Keyword, Item#, or Web ID')
              span.input-group-btn
                button.btn.btn-default(type='button')
                  | Search 
                  span.glyphicon.glyphicon-search
            // /input-group
          // /.col-lg-6
          .col-sm-2.col-sm-offset-6
            span.glyphicon.glyphicon-shopping-cart
            |                     Shoping Bag (0)
        // /.row
      // -------------------------------------------------
      #carousel-example-generic.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#carousel-example-generic', data-slide-to='0')
          li(data-target='#carousel-example-generic', data-slide-to='1')
          li(data-target='#carousel-example-generic', data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active
            center
              img(src='http://www.bonton.com/wcsstore/BonTon/images/homepage/2016/05/03/05_03_hp_long_slide1.jpg', alt='Power Sale. Wednesday, May 4. Save up to 50% off sitewide.')
            .carousel-caption
          .item
            center
              img(src='http://www.bonton.com/wcsstore/BonTon/images/homepage/2016/05/01/05_01_hp_long_slide3.jpg', alt='Clinique. Buy 1, try 2 Free.')
            .carousel-caption
          .item
            center
              img(src='http://www.bonton.com/wcsstore/BonTon/images/homepage/2016/05/01/05_01_hp_long_slide4_rl.jpg', alt='The World of Ralph Lauren. Links provided.')
            .carousel-caption
        // Controls
        a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
          span.sr-only Previous
        a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
          span.sr-only Next
